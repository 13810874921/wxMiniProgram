/**app.wxss**/
.container {
  font-family: 'PingFangSC-Regular';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.clear {
  clear: both;
  height: 0;
  overflow: hidden;
}

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.fl{float:left;}
.fr{float:right;}
.cen{text-align:center;}
.font{font-size:28px;font-weight:600;border-bottom:1px solid #f2f2f2;line-height:60px;height:60px;
overflow:hidden;
}
.op2{
  opacity:.2;
}
.bx{box-sizing:border-box;}
.wrap{border-top: 1px solid rgba(0,0,0,0.10)}